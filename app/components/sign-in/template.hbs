<form class="form" id="signInForm" action="${login_url}" method="POST">
<div class="form-group">
  {{input type="email" name="username" class="form-control" placeholder="Email" }}
</div>
<div class="form-group">
  {{input type="password" name="password" class="form-control" placeholder="Password" class="form-control"}}
</div>
<div class="form-group">
  <button type="submit" id="btnLogin" class="btn btn-block btn-primary">Login</button>
</div>
<div class="text-center m-b-sm">
  {{#link-to forgotpassword}}
  Forgot Password?
  {{/link-to}}
</div>
</form>

{{yield}}
